<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <!-- Espaciado superior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <!-- Contenedor del logo/ícono -->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/icon_circle_background"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📱"
                android:textSize="40sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Título principal -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplicaciones Móviles"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.01" />

        <!-- Subtítulo elegante -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sistema GPS en Tiempo Real"
            android:textSize="18sp"
            android:textColor="#64748B"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:fontFamily="sans-serif-light" />

        <!-- Card principal de información -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_elevated_background"
            android:padding="28dp"
            android:layout_marginBottom="32dp">

            <!-- Ícono de servidor -->
            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/feature_icon_background"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌐"
                    android:textSize="28sp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Título de la característica -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Servidor GPS Avanzado"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:gravity="center"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Descripción detallada -->
            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plataforma  para la recolección y visualización de datos GPS en tiempo real."
                android:textSize="16sp"
                android:textColor="#475569"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Contenedor de características -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp"
            android:gravity="center">

            <!-- Característica 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/feature_card_background"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚡"
                    android:textSize="24sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiempo Real"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Característica 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/feature_card_background"
                android:padding="16dp"
                android:layout_marginHorizontal="4dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔒"
                    android:textSize="24sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seguro"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Característica 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/feature_card_background"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊"
                    android:textSize="24sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analytics"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botón principal con efecto -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_primary_background"
            android:padding="2dp"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/startServerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚀  Iniciar Servidor GPS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="32dp"
                android:paddingVertical="16dp"
                android:background="@drawable/button_inner_background"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"
                android:minWidth="220dp" />

        </LinearLayout>

        <!-- Panel de estado elegante -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/status_panel_background"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado del Sistema"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Indicador de estado animado -->
                <LinearLayout
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/status_indicator_background"
                    android:layout_marginEnd="12dp">

                    <View
                        android:id="@+id/statusIndicator"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/status_dot"
                        android:layout_gravity="center" />

                </LinearLayout>

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servidor Desconectado"
                    android:textSize="15sp"
                    android:textColor="#374151"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </LinearLayout>

        <!-- Espaciado inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>

</ScrollView>

